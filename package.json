{
  "name": "t_tokenbot",
  "version": "1.0.0",
  "main": "api/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:relative": "node ./build-relative.js",
    "preview:api": "yarn build:relative && vercel",
    "start": "tsx ./src/index.ts",
    "dev": "nodemon --exec tsx ./src/index.ts",
    "debug": "nodemon --inspect --exec tsx ./src/index.ts",
    "ts:check": "tsc --noEmit",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format:write": "prettier --write 'src/**/*.ts'",
    "lint:check": "eslint . --cache --ext .ts,.js",
    "lint:fix": "eslint . --cache --ext .ts,.js --fix .",
    "node:18": "nvm install v18.18.1 --reinstall-packages-from=node",
    "manual-pre-commit": "yarn build:relative && git add -A ./build"
  },
  "devDependencies": {
    "@swc/core": "^1.3.102",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.7.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@grammyjs/conversations": "^1.2.0",
    "@grammyjs/parse-mode": "^1.9.0",
    "@grammyjs/ratelimiter": "^1.2.0",
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "@vercel/node": "^3.0.26",
    "axios": "^1.5.0",
    "dayjs": "^1.11.10",
    "fs-extra": "^11.2.0",
    "grammy": "^1.22.4",
    "grammy-inline-menu": "^9.0.0",
    "telegraf-middleware-console-time": "^2.1.0",
    "winston": "^3.13.0",
    "winston-transport": "^4.7.0"
  }
}
