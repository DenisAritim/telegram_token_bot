{
  "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "outDir": "./public",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "allowJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "inlineSourceMap": true,
      "isolatedModules": true,
      "moduleResolution": "NodeNext",
      "lib": ["ES2022", "dom", "es6", "es5"],
      "types": ["node"],
      "typeRoots": ["./node_modules/@types", "./src/@types"],
      "paths": {
          "@/*": ["./src/*"]
      }
  },
  "include": ["src/**/*", "api/**/*", "locales/**/*"],
  "exclude": ["node_modules", "build-relative.js", "build"],
  "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
      "typeCheck": false,
      "transpileOnly": true,
      "require": ["tsconfig-paths/register"]
  },
  "lib": ["esnext"]
}
